/* pages/shopList/shopList.wxss */
page{
    background-color: #fff;
}
.shop{
    padding: 20rpx;
    border-bottom: 1rpx solid #ddd;
    display: flex;
    position: relative;
}
.shop-img{
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
}
.shop-info{
    widows: 520rpx;
    display: flex;
    flex-direction: column;
    font-size: 12px;
    color: #666;
    line-height: 1.5;
}
.shop-title{
    font-size: 16px;
    color: #333;
    width: 370rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.shop-address{
    width: 400rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.shop-star{
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    color: #e2e2e2;
}
.star-before{
    color: #f19e38;
    position: absolute;
    left: 0;
    top: 0;
    width: 90%;
    overflow: hidden;
}