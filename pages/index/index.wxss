.slider,
.slider image,
.slider swiper{
  width: 100%;
  height: 390rpx;
}
.index-nav{
  display: flex;
  flex-wrap: wrap;
}
.index-nav .nav-item{
  width: 33.33333%;
  height: 200rpx;
  /* border: 1rpx solid #ccc; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 14px;
  border-bottom: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
}
.index-nav .nav-item:nth-child(3n){
  border-right: none;
}
.index-nav image{
  width: 80rpx;
  height: 80rpx;
}